{
  "manifest_version": 3,
  "name": "Crostini MPRIS Bridge",
  "version": "0.1.0",
  "description": "Bridge ChromeOS media controls to Crostini MPRIS players.",
  "permissions": [
    "storage",
    "windows"
  ],
  "host_permissions": [
    "http://penguin.linux.test:5000/*",
    "http://127.0.0.1:5000/*",
    "http://localhost:5000/*"
  ],
  "background": {
    "service_worker": "background.js",
    "type": "module"
  },
  "action": {
    "default_title": "Crostini MPRIS Bridge",
    "default_popup": "popup.html"
  }
}

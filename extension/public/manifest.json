{
  "manifest_version": 3,
  "name": "Crostini MPRIS Bridge",
  "version": "0.1.0",
  "description": "Bridge ChromeOS media controls to Crostini MPRIS players.",
  "permissions": [
    "storage",
    "windows"
  ],
  "host_permissions": [
    "http://penguin.linux.test:5167/*",
    "http://127.0.0.1:5167/*",
    "http://localhost:5167/*"
  ],
  "background": {
    "service_worker": "background.js",
    "type": "module"
  },
  "action": {
    "default_title": "Crostini MPRIS Bridge (open panel)"
  },
  "options_page": "panel.html",
  "commands": {
    "open-panel": {
      "suggested_key": {
        "default": "Ctrl+Shift+Y"
      },
      "description": "Open or focus Crostini MPRIS panel"
    }
  }
}
